<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SocialMediaApplicaition" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="backgroundScrollViewLogIn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">-20dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:elevation">10dp</item>
    </style>


    <style name="backgroundScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>


    <style name="backgroundLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:theme">@style/backgroundScreen</item>
    </style>

    <!--  for dark theme app -->
    <style name="backgroundScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="headingTextMain">
        <item name="theme">@style/textColor</item>
        <item name="android:theme">@style/textColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="hintTextColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#D3D3D3</item>
        <item name="android:background">@null</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="subHeadingText">
        <item name="theme">@style/textColorSub</item>
        <item name="android:theme">@style/textColorSub</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:background">@null</item>
    </style>


    <style name="textColorSub">
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="editTextLinearLayout">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/_13sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:background">@drawable/background_border</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
    </style>



    <style name="editTextImageView">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:background">@null</item>
    </style>


    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginBottom">@dimen/_6sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="layout_goneMarginEnd">@dimen/_5sdp</item>
    </style>

    <style name="editTextErrorMsg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/subHeadingText</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:textColor">@color/red</item>
    </style>



    <style name="bottomYellowContinueButtonRound">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:background">@drawable/background_yello_curve</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="subHeadingTextSignUp">
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="theme">@style/textColorSub</item>
        <item name="android:theme">@style/textColorSub</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="sideMenuImage">
        <item name="android:layout_width">@dimen/_22sdp</item>
        <item name="android:layout_height">@dimen/_22sdp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="tint">@color/imageColor</item>
    </style>



    <style name="sideMenuText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/imageColor</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_weight">.3</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="searchbar">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">12sp</item>

    </style>


    <style name="cardViewLayout">
        <item name="android:background">#333333</item>
        <item name="cardCornerRadius">15dp</item>
    </style>




</resources>